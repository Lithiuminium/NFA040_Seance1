<section>

         <title>Tableau HTML</title>
    <style>
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #f4f4f4;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #e6f7ff;
        }
    </style>


    <h1 style="text-align: center;">Exemple de Tableau HTML</h1>
    <table>
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Pomme</td>
                <td>1.00 €</td>
                <td>10</td>
            </tr>
            <tr>
                <td>Banane</td>
                <td>0.80 €</td>
                <td>15</td>
            </tr>
            <tr>
                <td>Orange</td>
                <td>1.20 €</td>
                <td>8</td>
            </tr>
        </tbody>
    </table>
    </section>
